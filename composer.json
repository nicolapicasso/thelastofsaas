{
    "name": "sinapsis/cms",
    "description": "CMS personalizado para We're Sinapsis - Agencia de marketing digital",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.5",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Sinapsis\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "migrate": "php migrations/migrate.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
