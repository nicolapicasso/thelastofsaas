# Application
APP_NAME="The Last of SaaS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database (Docker)
DB_HOST=db
DB_PORT=3306
DB_DATABASE=tlos
DB_USERNAME=tlos
DB_PASSWORD=tlos_secret

