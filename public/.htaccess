<IfModule mod_rewrite.c>
    RewriteEngine On

    # Detect if we're being accessed via /public/ and set base accordingly
    RewriteCond %{REQUEST_URI} ^/public/
    RewriteRule ^ - [E=BASE:/public]

    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^ - [E=BASE:]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Send Requests To index.php (no trailing slash redirect to avoid /public/ exposure)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Prevent browser from serving stale content for dynamic pages
    # This applies to all rewritten URLs (going through index.php)
    <FilesMatch "^index\.php$">
        Header set Cache-Control "no-cache, must-revalidate, private"
        Header set Pragma "no-cache"
    </FilesMatch>
</IfModule>

# Prevent caching of admin routes
<IfModule mod_headers.c>
    SetEnvIf Request_URI "^/admin" no_cache
    SetEnvIf Request_URI "^/sponsor/" no_cache
    SetEnvIf Request_URI "^/empresa/" no_cache
    Header set Cache-Control "no-cache, no-store, must-revalidate, private, max-age=0" env=no_cache
    Header set Pragma "no-cache" env=no_cache
    Header set Expires "Thu, 01 Jan 1970 00:00:00 GMT" env=no_cache
    Header set Vary "Cookie" env=no_cache
    Header unset ETag env=no_cache
</IfModule>

# Disable ETags globally (they can cause caching issues)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Disable directory listing
Options -Indexes

# Block access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
